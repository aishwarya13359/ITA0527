import cv2

image = cv2.imread("C:/Program Files/python/WhatsApp Image 2026-02-27 at 2.12.24 PM.jpeg")

# Check if image loaded properl
if image is None:
    print("Error: Image not found. Check file path!")
else:
    gray = cv2.cvtColor(image, cv2.COLOR_BGR2GRAY)
    cv2.imshow("Gray Image", gray)
    cv2.waitKey(0)
    cv2.destroyAllWindows()
